<style>
  *
  {
    background-image: url(https://media.istockphoto.com/id/695100728/vector/vector-background-with-blurred-objects-abstraction-in-gray.jpg?s=2048x2048&w=is&k=20&c=XJcgrEuZs2dmGPQCCNYDzQmvDKblPp3kYn5Ux04Rtas=);
  }
  .main_div
  {

    height:auto;
    width: 300px;
    line-height: 2;
    text-align: center;
    padding: 10px;
    margin-left: 40%;
    margin-top: 5%;
    border-radius: 20px;
    box-shadow: 2px 2px 10px black;
    
  }
  label
  {
    font-size: 20px;
    font-weight: 600;
  }
 

</style>

<div class="main_div">
<%= form_with(model: @article, local: true, html: { multipart: true }) do |form| %>
  <div>
    <%= form.label :title  %>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>
   <br>
  <div>
    <%= form.label :body %>
    <%= form.textarea :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div style="color: white;">
    <%= form.submit %>
  </div>
  <div>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public' %>
</div>

<% end %>
